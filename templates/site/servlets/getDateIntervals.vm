#set( $fullPackageName = $SITE_CLASS_PREFIX + ".api")

package $fullPackageName;

import com.sutherland.helios.date.interval.Intervals;
import com.sutherland.helios.date.interval.Interval;
import com.sutherland.helios.date.parsing.DateParser;

import java.io.IOException;
import java.io.PrintWriter;
import java.util.Map.Entry;

import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

/**
 * @author $AUTHOR
 *
 */
public class GetDateIntervals extends HttpServlet 
{

	private static final long serialVersionUID = $math.random(1,99999999)L;

	private GetDateIntervals(){};
	
	public void doGet(HttpServletRequest request, HttpServletResponse response)
	{
		PrintWriter out = null;
		try
		{				
			out = response.getWriter();
			
			Intervals intervals = new Intervals(DateParser.NOW_DATE_KEYWORD);
						
			for(Entry<String, Interval> timeInterval : intervals.getAvailableTimeIntervals().entrySet())
			{
				out.println("\"" + timeInterval.getKey() + "\",\"" + timeInterval.getValue().getStartDate()  + "\",\"" + timeInterval.getValue().getEndDate() + "\""); 
			}
		}
		catch (Exception t)
		{
			t.printStackTrace();
				
			//simple message for the user
			try 
			{
				if(out == null)
				{
					out = response.getWriter();
				}
				
				out.println("Error: " + t.getMessage());
			} 
			catch (IOException e) 
			{
				e.printStackTrace();
			}
			finally
			{
				if(out != null)
				{
					out.close();
				}
			}
		}
		finally
		{
			if(out != null)
			{
				out.close();
			}
		}
	}

}
